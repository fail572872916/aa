<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.weili.wisdom.base.view.NoScrollViewPager
        android:id="@+id/vp_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.weili.wisdom.base.view.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_content_fragment_home"
            style="@style/buttom_tab_style"
            android:drawableTop="@drawable/bottom_home_tab_bg"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_content_fragment_newsscent"
            style="@style/buttom_tab_style"
            android:drawableTop="@drawable/bottom_news_tab_bg"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/rb_content_fragment_smarts"
            style="@style/buttom_tab_style"
            android:drawableTop="@drawable/bottom_smarts_tab_bg"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_content_fragment_gavaffairs"
            style="@style/buttom_tab_style"
            android:drawableTop="@drawable/bottom_gavaffairs_tab_bg"
            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_content_fragment_setting"
            style="@style/buttom_tab_style"
            android:drawableTop="@drawable/bottom_setting_tab_bg"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>